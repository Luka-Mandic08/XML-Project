{
  "workbench.editor.enablePreview": true,
  //This settings makes all config files unvisible in file explorer, by default.
  //To make file visible in project tree, appropriate file pattern value should be set to *true*.
  //There is also extension that quickly toggles excluded (hidden) files visibility in the file explorer.
  //It is added in extensions.json recommendations, and its id is "amodio.toggle-excluded-files".
  //This file should not be pushed if it is changed. By default, all config files should be hidden (all values should be set to 'true').
  "files.exclude": {
    "**/*.babelrc": false,
    "**/*.eslintrc.json": false,
    "**/package.json": false,
    "**/package-lock.json": false,
    "**/project.json": false,
    "**/jest.config.js": false,
    "**/tsconfig.json": false,
    "**/tsconfig.lib.json": false,
    "**/tsconfig.spec.json": false,
    "**/tsconfig.app.json": false,
    "**/polyfills.ts": false,
    "node_modules": false,
    "**/svgTransform.js": false,
    ".editorconfig": false,
    ".gitignore": false,
    ".prettierignore": false,
    ".prettierrc": false,
    "babel.config.json": false,
    "jest.preset.js": false,
    "jest.setup.ts": false,
    "nx.json": false,
    "package-lock.json": false,
    "tsconfig.base.json": false,
    "workspace.json": false,
    "**/.browserslistrc": false
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
